@import "_config"

body
  font-family: 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  position: relative
  height: 100%
  margin: 0
  color: color-dark

ol, ul, form, p
  margin: 0

a
  text-decoration: none
  color: color-primary
  cursor: pointer

pre
  overflow-x: auto

.app-body
  padding: 1em
  margin: 0 auto
  height: 100%
  max-width: 750px
  position: relative
  transition: opacity .2s

.hljs
  background: none !important

.tags
  margin: 15px 0
  span
    &:first-child
      font-size: .8em
      font-weight: 600

.tag-code
  font-family: 'Roboto Mono', Monaco, courier, monospace
  font-size: 0.8em
  background-color: color-background
  color: color-orange
  padding: 3px 5px
  margin: 0 2px
  border-radius: 2px
  white-space: nowrap

.article-card
  padding-bottom: 30px
  &:first-child
    margin-top: 80px

h2.article-head
  font-size: 1.5em
  margin-bottom: 0

.article-head > a
  color: color-dark
  &:hover
    border-bottom: 2px solid color-primary

.article-date
  color: color-gray
  font-size: 12px
  margin: 10px 0

.article-summary
  margin: 20px 0
  color: color-dark
  @media m-mobile
    font-size: 15px

.more
  font-size: 14px
  font-weight: 600

#article-banner
  width: 100%
  position: absolute
  box-sizing: border-box
  top: 0;
  left: 0
  padding: 80px 20px 20px 20px
  text-align: center;
  @media m-mobile
    padding: 80px 10px 20px 10px
  h2
    margin: .4em 0
    font-size: 40px
    color: color-white
    text-shadow: 0 0 40px color-dark;
    @media m-mobile
      font-size: 30px
  .post-date
    font-size: 12px
    margin: 10px 0
    color: color-white

.post-article
  margin-top: 30px
  @media m-mobile
    margin-top: 10px

.qrcode
  padding: 30px 0
  text-align: center
  border-bottom: 1px dashed color-border
  canvas
    padding: 5px
    box-shadow: 0 0 1px color-shadow
  p
    font-size: 12px
    display: block
    text-align: center
    color: color-gray

.scroll-top
  cursor: pointer
  opacity: 0
  position: fixed
  box-sizing: border-box
  right: 2em
  bottom: 100px
  width: 40px
  height: 40px
  padding: 5px
  background-color: color-primary
  border-radius: 20px
  transition: opacity .5s ease

.arrow-icon
  background-image: url(arrow-url)
  width: 30px
  height: 30px
  display: block
  background-size: contain

.opacity
  opacity: 1

@import "_partial/header"
@import "_partial/footer"
@import "_partial/pager"
@import "_partial/markdown"